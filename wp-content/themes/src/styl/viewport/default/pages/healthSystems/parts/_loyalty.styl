.loyalty {
  display block
  background white-lila

  .block-column {
    width 50%
    display inline-block
  }

  .bg-image {
    position absolute
    right 50%
    height 80%
    bottom 0
  }

  .content {
    width 500px
    top 20%
    position absolute
    left 50%

    .text{
      color santas-gray
      fontsize-20-strong()
    }

    .heart {
      position relative
      text-align center
      margin 60px auto 40px

      img {
        width 350px
      }

      span {
        color gulf-blue
        fontsize-130()
        padding-bottom 20px
        position absolute
        left 0
        right 0
        margin auto
        top 80px

        .perc{
          fontsize-35()
          top 10px
          right -180px
          padding-bottom 10px
          position absolute
        }
      }
    }
  }

  h2 {
    color gulf-blue
    fontsize-50()
  }

  h3 {
    color brink-pink
    fontsize-35()
  }

  .text {
    margin-top 20px
    fontsize-20-strong()
    color blumine
  }
}
