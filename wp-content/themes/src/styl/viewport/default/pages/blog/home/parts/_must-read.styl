.must-read-container {

  margin-top 100px
  background white
  padding 0px 50px
  position relative

  .zee {
    margin 0px auto
    left 0
    right 0
    top -60px
    z-index 1
    position absolute
  }

  .must-read {
    fontsize-18-strong()
    color pink-rose
    text-align center
    padding-top 100px
    display block
    z-index 1
    position relative
  }

  h2 {
    fontsize-24-strong()
    color gulf-blue
    text-align center
    z-index 1
    padding-top 10px
    position relative
  }

  .article-list {
    margin 50px auto 100px auto
    max-width 1280px
    height 450px
    z-index 1
    padding-top 70px

    .article {

      position relative
      text-align center

      a {

        text-decoration none

        .round-mask {
          -webkit-backface-visibility: hidden;
          -webkit-transform: translateZ(0) scale(1, 1);
          width 260px
          height 260px
          border-radius 100%
          overflow hidden
          margin 0px auto

          img {
            float left
            //max-height 300px
            height 100%
            width auto
            position relative
            left 50%
            top 50%
            transform translate(-50%, -50%)
          }
        }

        .title {
          fontsize-18-strong()
          color gulf-blue
          text-decoration none
          margin-bottom 10px
          max-width 70%
          margin: 20px auto 0px auto
          transition 0.2s color linear

        }

        &:hover {
          .title {
            color pink-rose
          }
        }
      }
    }
  }
}
