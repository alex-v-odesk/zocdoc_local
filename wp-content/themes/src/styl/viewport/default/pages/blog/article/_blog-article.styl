#article {

  background-color white

  .navigation {
    display none
  }

  // Generic style for the home page

  .info {

    color white

    span {

      font-size 1.2rem
      line-height 1.5rem
      font-family sharp-medium
      opacity 0.8
      margin 10px 5px
      display inline-block

      &.category {
        fontsize-14()
        font-family sharp-sans-bold
        opacity 1
        transition 0.2s opacity Linear

        &:hover{
          opacity 0.7
        }
      }
    }
  }

  .explore-more {
    outline none
    display block
    margin 0px auto 40px auto
    padding 10px 20px
    background none
    border 1px solid gulf-blue
    fontsize-18-medium()
    cursor pointer
    transition 0.2s all linear

    &:hover {
      background-color gulf-blue
      color white
    }
  }

