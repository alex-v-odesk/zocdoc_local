.values {
  height auto
  position relative
  background malibu
  margin 0

  &.hidden {
    visibility hidden
    opacity 0
  }

  h2 {
    color gulf-blue
    fontsize-50()
    padding: 15vh 0 10vh 0;
    text-align center
    position relative
    width 80%
    margin 0px auto
    transform translateY(30px)
    z-index 50
  }

  .value-videos-wrapper {

    z-index 3
    margin 0px auto
    padding-top 100px

    .value-video {
      display inline-block
      position relative
      width 45%
      bottom 80px
      float left
      top -30px

      &:nth-child(even) {
        margin-top 15vh
        margin-left 5%
      }

      &:nth-child(odd) {
        margin-bottom 15vh
        margin-right 5%
      }

      .canvas {
        z-index 2
        position absolute
        left 0
        top 0
        right 0
        bottom 0
        height 100%
        width 100%
      }

      .video-container {
        z-index 1
        height auto
        width 100%
        opacity 0
        //overflow hidden

        &.no-video-player {
          .mask {
            &:hover {
              cursor default
            }
            &.hide {
              img{
                transition none
                transform none
              }
            }
          }
        }

        .overlay-content {
          height: 100%;

          h3 {
            font-size: 3rem;
            top: auto;
            margin-top: 30%;
            transform: translate3d(0%, 0%, 0px);
          }

          .btn-overlay-play {
            top: 35%;
            bottom: auto;
          }

        }

        .mask {
          left 0
          top 0
          position absolute
          z-index 30
          width: 100%
          height: 100%
          transform none

          &:hover {
            cursor pointer
          }

          img {
            transition: transform 250ms ease-in;
            display block
            width 101%
            height 125%
            top -12.5%
            position relative
          }

          &.hide {

            img {
              transition: transform 250ms ease-in;
              transform: scale3d(1.75,1.75,0);
            }
          }
        }

        .poster {
          aspect-ratio(16, 9)
          left 0
          top 0px
          transform none
          background black

          img {
            opacity 0.7
          }
        }

        .yt-player {
          aspect-ratio(16, 9)
          position absolute
          left 0
          margin auto
          right 0
          width 100%
          left 0px
          top 0px
        }

        .custom-video-controls-container {
          transition 0.2s opacity linear
          opacity 1

          &.hidden {
            opacity 0
          }
        }

        .description {
          position absolute
          bottom 0
          width 90%
          margin 0px auto
          left 0
          right 0
          bottom -75px
          text-align center
          z-index 30
          transition 0.2s opacity linear
          opacity 1

          p {
            fontsize-20-strong()
            color gulf-blue
          }

          &.hidden {
            opacity 0
          }

        }
      }

    }
  }
}
