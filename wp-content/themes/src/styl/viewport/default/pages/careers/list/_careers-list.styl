#careers-list {

  overflow: hidden;

  .full-size-block {
    min-height 100vh
    position relative

    .content {
      position relative
      z-index 2
      opacity 0
    }

    .cover {
      opacity 0
      position absolute
      width 75%
      max-width 770px
      left 0
      right 0
      top 0
      bottom 0
      margin auto
      z-index 0
    }

    .layer {
      opacity 0
      background rgba(0, 0, 0, .35)
      position absolute
      width 100%
      height 100%
      left 0
      right 0
      top 0
      z-index 1
    }

    .canvas {
      position absolute
      width 100%
      height 100%
      z-index 10
      left 0
      top 0
    }

  }

@import "parts/_list-header";
@import "parts/_department-list";

}
