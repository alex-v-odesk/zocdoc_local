#careers {
  min-height 100vh

  .arrow {
    cursor pointer
    position absolute
    left 0
    right 0
    bottom 15px
    height 25px
    width 20px
    margin auto
    cursor pointer

    span {
      background gulf-blue
      position absolute
      border-radius 10px
      width 3px
    }

    .middle {
      left 0
      right -1px
      bottom 0.5px
      width 3px
      height 100%
      margin auto
    }

    .line {
      bottom -1px
    }

    .left-line {
      left 3px
      height 15px
      transform rotate(-45deg)
    }

    .right-line {
      right 2px
      height 15px
      transform rotate(45deg)
    }

  }

  .loader {
    position fixed
    width 100%
    height 100%
    z-index 100
    /* dev mode */
    display none
  }

  .full-size-block {
    height 100vh
    min-height 100vh
    width 100vw
    position absolute
    margin 0
    padding 0
    overflow hidden
  }

  #main-canvas {

    &.hidden {
      display none
    }

    position fixed
    width 100%
    height 100%
    z-index 10
    left 0
    top 0
    pointer-events none
  }

/*==========  Parts  ==========*/
@import "parts/_intro";
@import "parts/_story";
@import "parts/_values";
@import "parts/_patients";
@import "parts/_culture";
@import "parts/_perks";
@import "parts/_joinus";

/*==========  Components  ==========*/
@import "../components/_videoPlayer";

}

@-webkit-keyframes play {
  from {
    background-position: 0px
  }
  to {
    background-position: -22184px
  }
}
