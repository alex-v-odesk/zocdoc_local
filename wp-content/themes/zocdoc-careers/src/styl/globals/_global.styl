/*==========  Global styles  ==========*/
html {
  width 100vw

  &.is-ie {
    body {
      opacity 1
    }
    // #page-footer {
    //   display none
    // }
  }

}

html, body {

  box-sizing border-box
  font-size 62.5%
  -webkit-text-size-adjust 100%
  -webkit-font-smoothing antialiased
  min-height 100vh
  width 100%
  height 100%
  margin 0
  padding 0
  // overflow-x: hidden

  &[data-currentpage="healthsystems"], &[data-currentpage="careers"] {
    overflow hidden
    -webkit-overflow-scrolling: auto;
  }

  /* apply a natural box layout model to all elements, but allowing components to change */
  /* We are defining a base font-size of 62.5% to have the convenience of sizing rems in a way that is similar to using px. 14px = 1.4rem */
}

body {

  opacity 1

  // &.show {
  //   opacity: 1;
  //   transition: opacity 1s linear;
  // }

  // for now
  font-family kievit-slab-book

  .overlay-bg {
    position fixed
    width 100vw
    height 100vh
    left 0
    top 64px
    z-index 10000
    display none
  }

  &.normalScrollBehavior {
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
  }

  &[data-page-slug="careers"] {
    background-color white-lila

    #page-footer {
      width 100vw
    }

    #container {
      overflow hidden
    }

    .overlay-bg {
      background mauve
      display block
    }
  }

  &[data-page-slug="healthsystems"] {

    background white-lila

    #page-footer {
      width 100vw
    }

    #container {
      overflow hidden
    }

    .overlay-bg {
      background brink-pink
      display block
    }
  }

  &[data-page-slug="careers-list"] {

    #page-header {
      background none
      transition none
    }

    .overlay-bg {
      display none
    }

  }

  &[data-currentpage="job-detail"] {
    background white

    .overlay-bg {
      display none !important
    }

  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

*, *:before, *:after {

  box-sizing inherit

}

body.is-scrolling {
