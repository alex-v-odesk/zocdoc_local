html, body {

  box-sizing border-box
  font-size 62.5%
  -webkit-text-size-adjust 100%
  -webkit-font-smoothing antialiased
  min-height 100vh
  width 100%
  height 100%
  margin 0
  padding 0
  // overflow-x: hidden

  &[data-currentpage="healthsystems"], &[data-currentpage="careers"] {
    overflow hidden
    -webkit-overflow-scrolling: auto;
  }

  /* apply a natural box layout model to all elements, but allowing components to change */
  /* We are defining a base font-size of 62.5% to have the convenience of sizing rems in a way that is similar to using px. 14px = 1.4rem */
}

