.search-results {

  padding 100px 0
  min-height: 35vh;
  
  .back-home {
    margin-top: 1%;
  }

  .no-results {
    fontsize-18-strong()
    color gulf-blue
    a {
      color: #F96573
      fontsize-18-strong()
      
    }
  }


  .results {

    h3 {
      margin 0px auto
      text-align left
      fontsize-18-strong()
      color light-grey
    }

    .result {

      margin 50px auto
      border-bottom 1px solid light-grey
      padding-bottom 25px

      a {

        text-decoration none
        position relative
        text-align left
        display block
        min-height 75px

        .round-mask {
          -webkit-backface-visibility hidden
          -webkit-transform translateZ(0) scale(1.0, 1.0)
          width 75px
          height 75px
          border-radius 100%
          overflow hidden
          position absolute
          left 0
          top 0
          margin auto

          img {
            float left
            height 75px
            width auto
            position relative
            left 50%
            top 50%
            transform translate(-50%, -50%)
          }
        }

        .title {
          fontsize-18-strong()
          color gulf-blue
          text-decoration none
          transition 0.2s color linear
          padding-left 100px
        }

        .info {

          padding-left 100px

          span {
            font-size 1.2rem
            line-height 1.5rem
            font-family sharp-medium
            color dark-grey
            margin-top 10px
            display inline-block
            &.category {
              fontsize-14()
              font-family sharp-sans-bold
            }
          }
        }

        &:hover {
          .title {
            color pink-rose
          }
        }

      }
    }
  }
}
