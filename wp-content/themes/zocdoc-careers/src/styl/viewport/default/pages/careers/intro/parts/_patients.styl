// Patiens Block

.patients {
  height 100vh
  min-height 100vh
  margin 0
  padding 0
  right 0
  left 0
  overflow hidden
  position absolute
  background white-lila

  &.hidden {
    visibility hidden
    opacity 0
  }

  h2 {
    text-align center
    padding 0 0 100px
    display block
    width 100%
    color gulf-blue
    fontsize-50()
  }

  .typing {
    top -70px
    background white
    position absolute
    //z-index 15
    width 58px
    margin auto
    left 0
    z-index 1
    border-radius 25px

    .round-animate {
      height 10px
      width 10px
      margin 10px 2px
      background #e5e5e5
      position relative
      float left
      border-radius 50%

      &:first-child {
        margin-left 10px
      }
    }
  }

  .patients-content {
    height 540px
    margin 0px auto
    position relative
    width 100%
  }

  .round {
    position absolute
    left -20px
    bottom -20px
    background white
    border-radius 100%
    height 15px
    width 15px
  }

  .patient-block {
    height 290px
    position relative
    display inline-block
    margin 0 39px

    .content-block {
      position relative
      width 290px
    }

    .quote {
      width 290px
      height 290px
      overflow hidden
      background white
      border-radius 20px
      position relative
      z-index 5
      opacity 0

      .img {
        padding 30px 0
        text-align center
        transform scale(.1)

        img {
          max-height 130px
        }
      }

      .text {
        opacity 0
        width 290px
        fontsize-18-strong()
        color gulf-blue
        margin 0 auto
        padding 0 10%
        position absolute
        bottom 30px
      }

    }

    .type {
      margin 20px 0 0 0
      position relative

      img {
        display inline-block
        height 50px
        width 50px
        float left
        opacity 0
        position relative
        z-index 1
      }

      p {
        text-align left
        top 4px
        padding 3px 0 3px 60px
        color waterloo
        fontsize-14()
        position relative

        .name {
          opacity 0
          position relative
          fontsize-14-strong()
          display block
        }
        .job {
          opacity 0
          position relative
        }
      }
    }
  }
}


// Override media query for very specific overlap issue

@media only screen and (min-width : 922px) and (max-width : 1130px)  {

  .patients .patient-block {
    margin 0 5px
  }

}
