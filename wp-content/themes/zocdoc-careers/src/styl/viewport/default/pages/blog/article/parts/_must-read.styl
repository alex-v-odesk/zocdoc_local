.must-read-container {

  background white-lila
  padding 0px 50px
  margin-top -90px
  position relative

  &.has-thumbnail {
    margin-top -90px
  }

  &[data-color-category='partnership']{
    .article-list .article a:hover{
      .title {
        // color #39E4AD
      }
    }
  }
  &[data-color-category='company']{
    .article-list .article a:hover{
      .title {
        // color #44D8FB
      }
    }
  }
  &[data-color-category='patients']{
    .article-list .article a:hover{
      .title {
        // color #FCB5C9
      }
    }
  }
  &[data-color-category='provider']{
    .article-list .article a:hover{
      .title {
        // color #F96573
      }
    }
  }
  &[data-color-category='tech']{
    .article-list .article a:hover{
      .title {
        // color #C191FF
      }
    }
  }
  &[data-color-category='default']{
    .article-list .article a:hover{
      .title {
        // color #FCB5C9
        color #F96573
      }
    }
  }

  .arc {
    background white-lila
    position absolute
    top -50px
    left -5%
    right 0
    height 150px
    width 110%
    border-top-left-radius 50%
    border-top-right-radius 50%
    z-index 0
  }

  h2 {
    fontsize-24-strong()
    color gulf-blue
    text-align center
    z-index 1
    padding 60px 0
    position relative
  }

  .article-list {
    margin 0px auto
    padding-bottom 100px
    max-width 1280px
    height 460px
    z-index 2

    .article {

      position relative
      text-align center

      a {

        text-decoration none

        .round-mask {
          -webkit-backface-visibility hidden
          -webkit-transform translateZ(0) scale(1, 1)
          width 280px
          height 280px
          border-radius 100%
          overflow hidden
          margin 0px auto

          img {
            float left
            //max-height 300px
            height 100%
            width auto
            position relative
            left 50%
            top 50%
            transform translate(-50%, -50%)
          }
        }

        .title {
          fontsize-18-strong()
          color gulf-blue
          text-decoration none
          margin-bottom 10px
          max-width 70%
          margin: 20px auto 0px auto
          transition 0.2s color linear

        }

        &:hover {
          .title {
            color pink-rose
          }
        }

        .info {
          color dark-grey
        }
      }
    }
  }
}
