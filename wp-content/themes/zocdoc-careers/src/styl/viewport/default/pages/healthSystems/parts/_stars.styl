.stars {
  position relative
  display block
  align-items center
  justify-content center
  background mauve
  top 70px

  .content.row.center {
    min-height 700px
    height 100vh
  }

  .content-text {
    position relative
  }

  .stars-icon {
    position absolute
    width 35px
    top 80px
    left 0
    right 0
    margin: auto
    z-index 1
  }

  .line {
    width 7px
    background #fff
    height 30px
    position absolute
    top 0
    left 0
    right 0
    margin: auto

    .bg {
      left -25%
      width 150%
      background mauve
      height 150%
      position absolute
    }
  }

  .line-0 {
    top -10px
    left -280px
  }

  .line-1 {
    top -40px
    left -220px
  }

  .line-2 {
    top -50px
    left -140px
  }

  .line-3 {
    top -70px
    right -290px
  }

  .line-4 {
    top -40px
    right -340px
  }

  .line-5 {
    top -10px
    right -400px
  }

  .scroll-content {
    align-items center
    justify-content center
    position relative
    height auto
    width 100%
  }

  h4 {
    position relative
    z-index 5
    width: 100%;
    fontsize-130()
    color gulf-blue

    span {
      fontsize-70()
    }
  }

  .trophy {
    position: absolute
    top -13px
    width 110px
    right 0
    left 195px
    margin auto
    z-index 0
  }

  h3 {
    width: 100%;
    color white
    fontsize-35()
    margin 30px 0
  }

  .text {
    width: 100%;
    margin-top 20px
    fontsize-20-strong()
    color chambray
  }

  .reviews.row.center {
    height 50vh
    min-height 620px
    top -20vh
    height auto
    position relative

    h4 {
      position relative
      fontsize-130()
      color gulf-blue

      span {
        fontsize-35()
        position relative
        z-index 5
      }

      img {
        position absolute
        width 125px
        bottom 35px
        left 195px
        right 0
        margin auto
        z-index -1
      }
    }

    h3 {
      color white
      fontsize-35()
      margin 30px 0
    }

    .text {
      margin-top 20px
      fontsize-20-strong()
      color chambray
    }
  }

}
