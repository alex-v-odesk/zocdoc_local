.search-form {

  margin 0
  padding 0
  transform translateY(-100%)
  position absolute
  width 100%
  top 0
  height 350px
  background-color white
  z-index 100
  // z-index 0

  .form-container {

    display block

    h2 {
      fontsize-18-strong()
      color light-grey
      display block
      width 100%
      padding-bottom 25px
    }

    form {
      input {
        text-align center
        outline 0
        color gulf-blue
        fontsize-45()
        border none
        width 100%
        height 80px
      }
    }
  }

}
