// Underline

.underline{

  text-decoration : underline;

}

// Text overflow
// Requires inline-block or block for proper styling

.text-overflow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

// Hide text

.hide-text {
  overflow: hidden;
  text-indent: 100%;
  white-space: nowrap;
}


/* Vertical Align */

.vertical-align{

	display: flex;
	align-items: center;
	justify-content: center;

}